<h2>Изменить <%= resource_name.to_s.humanize %></h2>
<div class="row">
  <div class="col-12 col-md-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>В настоящее время ожидает подтверждения для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(Оставьте пустым если не хотите менять)</i><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> символов минимум</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(нужен текущий пароль для подтверждения)</i><br />
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Обновить", class: 'btn btn-primary' %>
  </div>
<% end %>

<h3>Удаление аккаунта</h3>

<p> <%= button_to "Удалить аккаунт", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "Вы уверены?" }, method: :delete %></p>

<%= link_to "Вернуться", :back %>
  </div>
</div>
