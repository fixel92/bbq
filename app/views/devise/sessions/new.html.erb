<h2>Войти</h2>
<div class="row">
  <div class="col-12 col-md-6">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label 'Пароль' %><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Запомнить меня' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Войти", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>