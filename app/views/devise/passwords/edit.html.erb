<h2>Сменить пароль</h2>
<div class="row">
  <div class="col-12 col-md-6">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Новый пароль" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em><br />
    <% end %>
    <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Подтвердите новый пароль" %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Изменить пароль", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>