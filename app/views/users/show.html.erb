<p id="notice"><%= notice %></p>
<div class="text-center">
  <h1><%= @user.name %></h1>
  <%= image_tag user_avatar(@user) %>
  <% if @user == current_user %>
  <p class="mt-2"><%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-light' %></p>
  <% end %>
</div>
<div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
      <h3>Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
      <p class="mt-2">Пользователь не организовал событий</p>
      <% end %>
    </div>
</div>
